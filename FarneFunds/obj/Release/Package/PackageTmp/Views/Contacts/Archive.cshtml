@model FarneFunds.Models.ContactDetails

@{
    ViewBag.Title = "Archive Contact";
}

<h2>Archive Contact - @Model.FirstName @Model.LastName</h2>

Are you sure you want to archive @Model.FirstName @Model.LastName, the contact will no longer be able to be accessed.

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Id);
    @Html.HiddenFor(x => x.FirstName);
    @Html.HiddenFor(x => x.LastName);
    @Html.HiddenFor( x => x.ZipCode );
    @Html.AntiForgeryToken()
    
    <div style="margin-top: 30px">
        <input type="submit" value="Archive" class="btn btn-danger" />
        @Html.ActionLink("Back to Contact", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
    </div>
}

